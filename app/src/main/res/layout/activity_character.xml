<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_character"
            android:id="@+id/imageView2"
            android:scaleType="centerCrop"

            android:contentDescription="TODO"/>
    <TextView
            android:layout_width="551dp"
            android:layout_height="136dp"
            android:text="@string/character_info"
            android:layout_marginTop="300dp"
            android:textSize="30dp"
            android:textColor="@color/white"
    />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/container1" android:gravity="center">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/containerCharacteristic" android:layout_weight="1" android:padding="10dp">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:padding="10dp" android:id="@+id/containerControl">

                <Button
                        android:text="@string/buttonBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_stroke_black90_press_white"
                        android:id="@+id/buttonBack"
                        android:textAllCaps="false"
                        android:textSize="19dp"
                />

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/containerInfo"
                    android:layout_weight="1">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/foto"
                        android:id="@+id/foto"
                        android:layout_weight="1"
                />
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/containerStat"
                    android:layout_weight="1">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/containerBlood">
                    <TextView
                            android:id="@+id/pointBlood1"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_blood"
                    />
                    <TextView
                            android:id="@+id/pointBlood2"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_blood"
                    />
                    <TextView
                            android:id="@+id/pointBlood3"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_blood"
                    />
                    <TextView
                            android:id="@+id/pointBlood4"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_blood"
                    />
                    <TextView
                            android:id="@+id/pointBlood5"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_blood"
                    />
                    <TextView
                            android:id="@+id/pointBlood6"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_blood"
                    />
                    <TextView
                            android:id="@+id/pointBlood7"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_blood"
                    />
                    <TextView
                            android:id="@+id/pointBlood8"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_blood"
                    />
                    <TextView
                            android:id="@+id/pointBlood9"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_blood"
                    />
                    <TextView
                            android:id="@+id/pointBlood10"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_blood"
                    />


                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/containerRadiation">
                    <TextView
                            android:id="@+id/radiation1"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_radiation"
                    />
                    <TextView
                            android:id="@+id/radiation2"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_radiation"
                    />
                    <TextView
                            android:id="@+id/radiation3"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_radiation"
                    />
                    <TextView
                            android:id="@+id/radiation4"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_radiation"
                    />
                    <TextView
                            android:id="@+id/radiation5"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_radiation"
                    />
                    <TextView
                            android:id="@+id/radiation6"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_radiation"
                    />
                    <TextView
                            android:id="@+id/radiation7"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_radiation"
                    />
                    <TextView
                            android:id="@+id/radiation8"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_radiation"
                    />
                    <TextView
                            android:id="@+id/radiation9"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_radiation"
                    />
                    <TextView
                            android:id="@+id/radiation10"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_points_radiation"
                    />

                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/containerArmor"
                        android:layout_marginTop="10dp">
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/containerThings"
                android:layout_weight="1">
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/containerBackpack"
                android:layout_weight="1">
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>